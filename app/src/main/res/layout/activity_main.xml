<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp">

            <ImageView
                android:id="@+id/iv_defalult"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="50dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_defalult_bitmap"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4" />

            <ImageView
                android:id="@+id/iv_defalult_bitmap"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/iv_defalult"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_defalult"
                app:layout_constraintWidth_percent="0.4" />

            <ImageView
                android:id="@+id/iv_defalult_round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_defalult_bitmap_round"
                app:layout_constraintTop_toBottomOf="@+id/iv_defalult"
                app:layout_constraintWidth_percent="0.4" />

            <ImageView
                android:id="@+id/iv_defalult_bitmap_round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/iv_defalult_round"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_defalult_round"
                app:layout_constraintWidth_percent="0.4" />

            <ImageView
                android:id="@+id/iv_defalult_gif"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_defalult_git_round"
                app:layout_constraintTop_toBottomOf="@+id/iv_defalult_bitmap_round"
                app:layout_constraintWidth_percent="0.4" />

            <ImageView
                android:id="@+id/iv_defalult_git_round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/iv_defalult_gif"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_defalult_gif"
                app:layout_constraintWidth_percent="0.4" />

            <ImageView
                android:id="@+id/iv_defalult_blur"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_defalult_blur_round"
                app:layout_constraintTop_toBottomOf="@+id/iv_defalult_gif"
                app:layout_constraintWidth_percent="0.4" />

            <ImageView
                android:id="@+id/iv_defalult_blur_round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/iv_defalult_blur"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_defalult_blur"
                app:layout_constraintWidth_percent="0.4" />

            <ImageView
                android:id="@+id/iv_defalult_blur_circle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_defalult_listener"
                app:layout_constraintTop_toBottomOf="@+id/iv_defalult_blur"
                app:layout_constraintWidth_percent="0.4" />

            <ImageView
                android:id="@+id/iv_defalult_listener"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/iv_defalult_blur_circle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_defalult_blur_circle"
                app:layout_constraintWidth_percent="0.4" />

            <TextView
                android:id="@+id/tv_listener"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#7a000000"
                android:gravity="center"
                android:text="点击下载图片"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="@+id/iv_defalult_listener"
                app:layout_constraintLeft_toLeftOf="@+id/iv_defalult_listener"
                app:layout_constraintRight_toRightOf="@+id/iv_defalult_listener"
                app:layout_constraintTop_toTopOf="@+id/iv_defalult_listener" />

            <ImageView
                android:id="@+id/iv_defalult_process"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_defalult_listener"
                app:layout_constraintTop_toBottomOf="@+id/iv_defalult_blur_circle"
                app:layout_constraintWidth_percent="0.4" />

            <!--            <ImageView-->
            <!--                android:id="@+id/iv_defalult_listener"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="0dp"-->
            <!--                android:scaleType="centerCrop"-->
            <!--                app:layout_constraintDimensionRatio="1:1"-->
            <!--                app:layout_constraintLeft_toRightOf="@+id/iv_defalult_blur_circle"-->
            <!--                app:layout_constraintRight_toRightOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="@+id/iv_defalult_blur_circle"-->
            <!--                app:layout_constraintWidth_percent="0.4" />-->

            <TextView
                android:id="@+id/tv_process"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#7a000000"
                android:gravity="center"
                android:text="点击下载图片"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="@+id/iv_defalult_process"
                app:layout_constraintLeft_toLeftOf="@+id/iv_defalult_process"
                app:layout_constraintRight_toRightOf="@+id/iv_defalult_process"
                app:layout_constraintTop_toTopOf="@+id/iv_defalult_process" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="15dp"
        android:text="图片加载"
        android:textColor="#323232"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>